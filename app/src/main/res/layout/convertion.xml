<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:background="@android:color/darker_gray">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:weightSum="1">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/IDdecimal"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <Button
            android:layout_width="fill_parent"
            android:layout_height="45dp"
            android:text="Convertir"
            android:id="@+id/IDconvertion"
            android:focusableInTouchMode="false"
            android:focusable="false"
            android:textSize="25dp"
            android:layout_margin="3dp"
            android:background="@android:color/black"
            android:textColor="#ffffff" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="45dp"
            android:text="Binaire"
            android:id="@+id/textView5"
            android:layout_weight="0.04"
            android:background="#f0a211"
            android:textColor="#040404"
            android:textSize="30dp"
            android:autoText="true"
            android:paddingLeft="80dp"
            android:focusableInTouchMode="false"
            android:focusable="false"
            android:layout_margin="3dp" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="45dp"
            android:id="@+id/IDbinaire"
            android:layout_weight="0.04"
            android:background="#fefdfc"
            android:textColor="#040404"
            android:textSize="25dp"
            android:autoText="true"
            android:paddingLeft="30dp"
            android:focusableInTouchMode="false"
            android:focusable="false"
            android:layout_margin="3dp" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="45dp"
            android:text="Octale"
            android:id="@+id/textView7"
            android:layout_weight="0.04"
            android:background="#f0a211"
            android:textColor="#040404"
            android:textSize="30dp"
            android:autoText="true"
            android:paddingLeft="80dp"
            android:layout_gravity="right"
            android:focusableInTouchMode="false"
            android:focusable="false"
            android:layout_margin="3dp" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="45dp"
            android:id="@+id/IDoctale"
            android:layout_weight="0.04"
            android:background="#fefdfc"
            android:textColor="#040404"
            android:textSize="25dp"
            android:autoText="true"
            android:paddingLeft="30dp"
            android:focusableInTouchMode="false"
            android:focusable="false"
            android:layout_margin="3dp" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="45dp"
            android:text="Hexadecimal"
            android:id="@+id/textView9"
            android:layout_weight="0.04"
            android:background="#f0a211"
            android:textColor="#040404"
            android:textSize="30dp"
            android:autoText="true"
            android:paddingLeft="80dp"
            android:focusableInTouchMode="false"
            android:focusable="false"
            android:layout_margin="3dp" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="45dp"
            android:id="@+id/IDhexadecimal"
            android:layout_weight="0.04"
            android:background="#fefdfc"
            android:textColor="#040404"
            android:textSize="25dp"
            android:autoText="true"
            android:paddingLeft="30dp"
            android:focusableInTouchMode="false"
            android:focusable="false"
            android:layout_margin="3dp" />

        <Button
            android:layout_width="fill_parent"
            android:layout_height="45dp"
            android:text="Retour"
            android:id="@+id/RetourConv"
            android:layout_gravity="center_horizontal"
            android:focusableInTouchMode="false"
            android:focusable="false"
            android:textSize="25dp"
            android:layout_margin="0dp"
            android:layout_marginTop="5dp"
            android:background="@android:color/black"
            android:textColor="#ffffff" />

    </LinearLayout>

</RelativeLayout>
